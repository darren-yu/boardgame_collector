        <div class="col-md-6 col-sm-6 wrapper text-block center">
            <h3>Sign Up Form</h3>
            <hr>
            <form class="form" method="post" action="/auth/signup">
                <input type="text" class="form-control" placeholder="Enter your full name" name="fullName" required>
                <br><br>
                <input type="text" class="form-control" placeholder="Enter your e-mail" name="email" required>
                <br><br>
                <input type="password" class="form-control" placeholder="Choose a password" name="password" required>
                <br><br>
                <input type="password" class="form-control" placeholder="Re-type your password" name="password2" required>
                <br><br>
                <input type="submit" class="btn btn-primary" value="Sign Up">
            </form>
        </div>


